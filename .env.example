# Database Configuration
# For local development with Docker Compose
DATABASE_URL=postgresql://postgresql:postgresql@localhost:5432/remind

# For production, use:
# DATABASE_URL=postgresql://user:password@host:5432/remind

# For development without Docker (SQLite)
# DATABASE_URL=sqlite:///./remind.db

# Backend Server
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Groq Configuration (for AI suggestions)
GROQ_API_KEY=gsk_...your-groq-api-key...

# Polar Configuration (for payment webhooks)
POLAR_API_KEY=your_polar_api_key
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# Logging
DATABASE_ECHO=false

# CORS Origins (comma-separated)
CORS_ORIGINS=https://remind.hamzaplojovic.blog,http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# AI Quota (free tier)
AI_QUOTA_FREE_TIER=100
AI_QUOTA_PRO_TIER=1000
