# Database Configuration
# For local development with Docker Compose
DATABASE_URL=postgresql://postgresql:postgresql@localhost:5432/remind

# For production, use:
# DATABASE_URL=postgresql://user:password@host:5432/remind

# For development without Docker (SQLite)
# DATABASE_URL=sqlite:///./remind.db

# Backend Server
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration (for AI suggestions)
OPENAI_API_KEY=sk-...your-openai-api-key...

# Paddle Configuration (for payment webhooks)
PADDLE_API_KEY=your_paddle_api_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# Logging
DATABASE_ECHO=false

# CORS Origins (comma-separated)
CORS_ORIGINS=https://remind.dev,http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# AI Quota (free tier)
AI_QUOTA_FREE_TIER=100
AI_QUOTA_PRO_TIER=1000
